<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6E9DC"
    tools:context=".fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:src="@mipmap/headshot" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_friendname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好友数："
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="修改用户名"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/round_radius"></Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="修改密码"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/round_radius"></Button>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6E9DC">

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="#F6E9DC"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@mipmap/guide2"
            android:gravity="center">

        </RadioButton>

        <RadioButton
            android:id="@+id/path"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@mipmap/path2"
            android:gravity="center">

        </RadioButton>

        <RadioButton
            android:id="@+id/friend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@mipmap/friend2"
            android:gravity="center"></RadioButton>

        <RadioButton
            android:id="@+id/things"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@mipmap/exhibition2"
            android:gravity="center"></RadioButton>

        <RadioButton
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@mipmap/setting1"
            android:gravity="center"></RadioButton>
    </RadioGroup>

    </RelativeLayout>

</LinearLayout>