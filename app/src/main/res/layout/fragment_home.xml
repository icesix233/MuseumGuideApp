<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6E9DC"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="中国共产党历史展览馆"
        android:textSize="40dp"
        android:textColor="@drawable/text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/round_radius">

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="请选择出发位置："
            android:textSize="25dp" />

        <Spinner
                android:id="@+id/spinner_start"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:popupBackground="#DCB8B8"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:entries="@array/start" />

        <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="请选择到达位置："
                android:textSize="25dp" />

        <Spinner
                android:id="@+id/spinner_end"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:popupBackground="#DCB8B8"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:entries="@array/end" />
    </LinearLayout>


        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/kong" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F6E9DC">

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="#F6E9DC"
        android:orientation="horizontal">



        <RadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@mipmap/guide1"
            android:gravity="center">

        </RadioButton>

            <RadioButton
                android:id="@+id/path"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@mipmap/path2"
                android:gravity="center">

            </RadioButton>

            <RadioButton
                android:id="@+id/friend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@mipmap/friend2"
                android:gravity="center"></RadioButton>

            <RadioButton
                android:id="@+id/things"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@mipmap/exhibition2"
                android:gravity="center"></RadioButton>

            <RadioButton
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@mipmap/setting2"
                android:gravity="center"></RadioButton>
    </RadioGroup>

    </RelativeLayout>

</LinearLayout>